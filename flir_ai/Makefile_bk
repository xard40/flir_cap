# Compiler and compiler flags
CXX = g++
CXXFLAGS = -Wall -O2 -std=c++11 -I/opt/spinnaker/include

# Linker and linker flags
LD = g++
LDFLAGS = -L/opt/spinnaker/lib
LDLIBS = -lSpinnaker -lGenApi -lGCBase_gcc540_v3_1 -lLog_gcc540_v3_1

# Source files and output binary
SRCS = flirutils.cpp
OBJS = $(SRCS:.cpp=.o)
TARGET = flirutils

all: $(TARGET)

$(TARGET): $(OBJS)
	$(LD) $(LDFLAGS) $(OBJS) $(LDLIBS) -o $(TARGET)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)
